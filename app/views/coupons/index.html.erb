<% if current_user %>
<% if @coupons.empty? %>
<p>Sorry, this merchant needs to complete set-up before you can get a discount!</p>
<% else %>
  <% if @shop.multiple_use == false && posted %>
  	<p>Sorry, you've already posted before!</p>
  <% else %>
  	Welcome <%= current_user.name %>!
  	<%= link_to "Sign Out", signout_path %>
  
  	<p><%= link_to "Post to #{current_user.provider.capitalize} and get your coupon!", status_update_path %></p>
  <% end %>
<% end %>
<% else %>
  <p style="color:#1f497d">We will post a message that you are shopping at <%= @shop.name %>.</p>
  <p style="color: #993366">To receive the discount code, <b>please click on one of the buttons below.</b></p>

<ul class="sociable">
	<li>
  	<a href="/auth/twitter"><img src="http://couponsociable.herokuapp.com/assets/login_twitter.png" border="0" /></a>
  </li>
  	<li>
  	<a href="/auth/facebook"><img src="http://couponsociable.herokuapp.com/assets/login_facebook.png" border="0" /></a>
  	</li>	
</ul>
<% end %>