<% if current_user %>
<% if @coupons.empty? %>
<p>Sorry, this merchant needs to complete set-up before you can get a discount!</p>
<% else %>
  <% if @shop.multiple_use == false && posted %>
  	<p>Sorry, you've already posted before!</p>
  <% else %>
  	Welcome <%= current_user.name %>!
  	<%= link_to "Sign Out", signout_path %>
  
  	<p><%= link_to "Post to #{current_user.provider.capitalize} and get your coupon!", status_update_path %></p>
  <% end %>
<% end %>
<% else %>
  <p>
  <a href="/auth/twitter"><img src="http://couponsociable.herokuapp.com/assets/login_twitter.png" /></a>
  </p>
  <p>
  <a href="/auth/facebook"><img src="http://couponsociable.herokuapp.com/assets/login_facebook.png" /></a>
  </p>	
<% end %>